---
import Layout from "../layouts/Layout.astro";
import HeroCard from "./HeroCard.astro";
---

<Layout>
  <div class="m-2 p-2 md:flex md:max-h-[calc(100vh-100px)] md:m-2 h-full">
    <div
      class="bg-white p-4 rounded-t md:rounded-s md:ltr md:w-1/2 flex flex-col justify-center"
    >
      <h4
        class="text-white bg-red-600 py-1 px-4 rounded-2xl mb-2 text-center md:text-left"
      >
        Tasty Food Forever
      </h4>
      <h2 class="text-2xl md:text-4xl font-bold pb-1 text-center md:text-left">
        Hot new items in the <span class="text-red-600">restaurant</span>
      </h2>
      <p class="pb-2 text-center md:text-left">
        Lorem ipsum dolor <span class="text-red-600">sit amet consectetur</span
        >, adipisicing elit. Ducimus earum officiis a eveniet eius nulla,
        adipisci tempora quidem nemo placeat!
      </p>
      <a
        href="#"
        class="font-bold flex justify-center md:justify-start items-center hover:text-red-600 transition-colors"
      >
        Order now
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6 ml-1"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m5.25 4.5 7.5 7.5-7.5 7.5m6-15 7.5 7.5-7.5 7.5"></path>
          <title>Order now</title>
        </svg>
      </a>
    </div>
    <div
      class="p-1 bg-red-600 rounded-b md:rounded-r md:rtl md:w-1/2 flex justify-center items-center"
    >
      <img
        class="p-1 hover:scale-95 transition w-full md:w-auto h-auto max-h-[50vh] object-contain"
        src="/hero-image.webp"
        alt="hero image"
      />
    </div>
  </div>
  <div class="">
    <HeroCard />
  </div>
</Layout>
