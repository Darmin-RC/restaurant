---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="bg-white p-4 m-4 rounded shadow-md">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Payment Details</h2>
    <form class="space-y-4">
      <div>
        <label class="block text-gray-700">Card Number</label>
        <input
          type="text"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-red-500 focus:border-red-500"
          placeholder="1234 5678 9012 3456"
        />
      </div>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-gray-700">Expiry Date</label>
          <input
            type="text"
            class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-red-500 focus:border-red-500"
            placeholder="MM/YY"
          />
        </div>
        <div>
          <label class="block text-gray-700">CVC</label>
          <input
            type="text"
            class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-red-500 focus:border-red-500"
            placeholder="CVC"
          />
        </div>
      </div>
      <button
        type="button"
        onclick="{() => (window.location.href = '/confirm-pay')}"
        class="w-full bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700"
      >
        Pay Now
      </button>
    </form>
  </div>
</Layout>
