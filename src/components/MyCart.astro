---
import Layout from "../layouts/Layout.astro";

const products = [
  {
    src: "https://www.unileverfoodsolutions.com.mx/tendencias/de-mexico-para-el-mundo/platillos-mexicanos/top10-platillos/jcr:content/parsys/content-aside-footer/columncontrol_copy/columnctrl_parsys_1/textimage_copy/image.transform/jpeg-optimized/image.1592429867593.jpg",
    title: "Product One Yeah",
    alt: "Product One Yeah",
    quanty: 1,
    price: 19.99,
  },
  {
    src: "https://www.buscounviaje.com/blog/wp-content/uploads/Casado-1024x936.jpg",
    title: "Product Three Yeah",
    alt: "Product Three Yeah",
    quanty: 4,
    price: 29.99,
  },
  {
    src: "https://i0.wp.com/sabordelobueno.com/wp-content/uploads/2018/01/casado-costa-rica.jpg?resize=750%2C500",
    title: "Product Five Yeah",
    alt: "Product Five Yeah",
    quanty: 2,
    price: 29.99,
  },
];

const total = products
  .reduce((acc, product) => acc + product.price * product.quanty, 0)
  .toFixed(2);
---

<Layout title="Brutal Restobar - My Cart">
  <section class="p-4">
    <h1 class="text-2xl font-bold mb-4">Shopping Cart</h1>
    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-6"
    >
      {
        products.map((product) => (
          <div class="bg-white p-4 rounded-lg shadow-md flex items-center">
            <img
              src={product.src}
              class="w-20 h-20 md:w-32 md:h-32 rounded-lg object-cover flex-shrink-0"
              alt={product.alt}
            />
            <div class="ml-4 flex-1">
              <h2 class="text-gray-900 font-semibold">{product.title}</h2>
              <div class="flex items-center mt-2">
                <button
                  class="inline-flex items-center justify-center p-1 text-sm font-medium h-6 w-6 text-gray-500 bg-white border border-gray-300 rounded-full focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200"
                  type="button"
                >
                  <span class="sr-only">Decrease quantity</span>
                  <svg
                    class="w-3 h-3"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 18 2"
                  >
                    <path
                      stroke="currentColor"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M1 1h16"
                    />
                  </svg>
                </button>
                <input
                  type="number"
                  class="bg-gray-50 w-14 border border-gray-300 text-gray-900 text-sm rounded-lg text-center focus:ring-blue-500 focus:border-blue-500 mx-2"
                  value={product.quanty}
                  readonly
                />
                <button
                  class="inline-flex items-center justify-center p-1 text-sm font-medium h-6 w-6 text-gray-500 bg-white border border-gray-300 rounded-full focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200"
                  type="button"
                >
                  <span class="sr-only">Increase quantity</span>
                  <svg
                    class="w-3 h-3"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 18 18"
                  >
                    <path
                      stroke="currentColor"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 1v16M1 9h16"
                    />
                  </svg>
                </button>
              </div>
              <p class="text-gray-900 font-semibold mt-2">
                ${product.price.toFixed(2)}
              </p>
              <a
                href="#"
                class="text-red-600 font-medium hover:underline mt-2 block"
              >
                Remove
              </a>
            </div>
          </div>
        ))
      }
    </div>
    <div class="bg-white p-4 rounded-lg shadow-md">
      <h2 class="text-xl font-bold mb-4">Order Summary</h2>
      <div class="flex justify-between items-center">
        <span class="text-gray-700">Total:</span>
        <span class="text-gray-900 font-semibold">${total}</span>
      </div>
      <form class="mt-4">
        <button
          type="button"
          id="redirect"
          class="w-full text-white bg-red-600 hover:bg-red-700 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
        >
          Proceed to Checkout
        </button>
      </form>
    </div>
  </section>

  <script>
    const redirect = document.getElementById("redirect");
    redirect?.addEventListener("click", (e) => {
      window.location.href = "/confirm-pay";
    });
  </script>
</Layout>
